<resources>
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/default_text_color</item>

        <!-- To change the background of options menu-->
        <item name="android:dropDownListViewStyle">@style/PopMenuDivider</item>
    </style>

    <style name="PopMenuDivider" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="itemBackground">@color/default_post_editor_background</item>
        <item name="android:divider">@color/default_text_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="popupTheme">@color/default_post_editor_background</item>
    </style>
</resources>